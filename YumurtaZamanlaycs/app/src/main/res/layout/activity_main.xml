<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000"  tools:context=".MainActivity">

    <TextView
        android:id="@+id/anaBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="🥚 Yumurta Zamanlayıcısı 🥚"
        android:textColor="#FFFFFF" android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBoyutLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Boyut"
        android:textColor="#FFFFFF" android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anaBaslik" />

    <RadioGroup
        android:id="@+id/radioGroupBoyut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBoyutLabel">

        <RadioButton
            android:id="@+id/radioButtonS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButtonM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />

        <RadioButton
            android:id="@+id/radioButtonL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />

        <RadioButton
            android:id="@+id/radioButtonXL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="XL"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewKivamLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pişme Derecesi - Kıvamı"
        android:textColor="#FFFFFF" android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupBoyut" />

    <RadioGroup
        android:id="@+id/radioGroupKivam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewKivamLabel">

        <RadioButton
            android:id="@+id/radioButtonAzPismis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Az Pişmiş (Cıvık)"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />

        <RadioButton
            android:id="@+id/radioButtonRafadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rafadan"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />

        <RadioButton
            android:id="@+id/radioButtonKayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kayısı Kıvamı"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />

        <RadioButton
            android:id="@+id/radioButtonKati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katı Pişmiş"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewTimerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="00:00"
        android:textColor="#FFFFFF" android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupKivam" />

    <ProgressBar
        android:id="@+id/progressBarTimer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#FFFFFF" android:backgroundTint="#444444" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTimerDisplay"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Başlat"
        android:textSize="18sp"
        android:textColor="#000000" app:backgroundTint="#FFFFFF" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBarTimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
